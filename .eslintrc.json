{
  "env": {
    "browser": true,
    "commonjs": true,
    "es6": true,
    "node": true,
    "jest": true
  },
  "plugins": ["json", "require-path-exists"],
  "extends": [
    "airbnb-base",
    "plugin:require-path-exists/recommended",
    "plugin:json/recommended",
    "plugin:prettier/recommended"
  ],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "rules": {
    "import/no-unresolved": 0,
    "import/no-dynamic-require": 0,
    "global-require": 0,
    "no-param-reassign": 0
  }
}
